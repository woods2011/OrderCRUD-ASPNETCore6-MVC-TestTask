@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MvcAppTest.Core.Application.Features.Orders.OrderItems.Queries.OrderItemVm

@{
    ViewBag.Title = "Подробности элемента заказа";
    Layout = "_Layout";
}

<h2>Подробности элемента заказа</h2>

<h4>Элемента заказа</h4>
<hr/>

<div class="col-md-4">
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Id)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.OrderId)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.OrderId)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Quantity)</dt>
        <dd class="col-sm-9">@Html.Raw($"{Model.Quantity:0.###}")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Unit)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Unit)</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.OrderId">Вернуться к заказу</a>
</div>