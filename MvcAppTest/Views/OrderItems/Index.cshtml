@model List<MvcAppTest.Core.Application.Features.Orders.OrderItems.Queries.OrderItemVm>

@{
    ViewBag.Title = "Элементы заказа";
    Layout = "_Layout";
}

<h2>Элементы заказа</h2>

<p>
    <a class="btn btn-primary btn-sm" asp-action="Create">Добавить элемент заказа</a>
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model[0].Id)</th>
        <th>@Html.DisplayNameFor(model => model[0].OrderId)</th>
        <th>@Html.DisplayNameFor(model => model[0].Name)</th>
        <th>@Html.DisplayNameFor(model => model[0].Quantity)</th>
        <th>@Html.DisplayNameFor(model => model[0].Unit)</th>
    </tr>

    @foreach (var orderItem in Model)
    {
        <tr>
            <td>@orderItem.Id</td>
            <td>@orderItem.OrderId</td>
            <td>
                <a asp-action="Details" asp-route-id="@orderItem.Id">@orderItem.Name</a>
            </td>
            <td>@($"{orderItem.Quantity:0.###}")</td>
            <td>@orderItem.Unit</td>
            <td>
                <a asp-action="Edit" asp-route-id="@orderItem.Id">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@orderItem.Id">Подробно</a> |
                <a asp-action="Delete" asp-route-id="@orderItem.Id">Удалить</a>
            </td>
        </tr>
    }
</table>